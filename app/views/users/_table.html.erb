<table>
  <thead>
    <tr>
      <th>Slideshow</th>
      <% unless @front_page %>
      <th>Action</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @shared_or_not.each do |slideshow| %>
    <tr>
      <td><%= link_to slideshow.name, slideshow %></td>
      <% unless @front_page %>
      <td>
        <%= link_to "edit_settings", edit_slideshow_path(slideshow) %>

        <%= link_to "cast slideshow", cast_path(slideshow), method: :post, data: { id: slideshow.id } %>

        <%= link_to "delete slideshow", slideshow_path(slideshow), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>